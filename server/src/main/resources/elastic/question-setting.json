{
  "analysis": {
    "analyzer": {
      "nori_analyzer": {
        "type": "nori"
      },
      "ngram_analyzer": {
        "type": "custom",
        "tokenizer": "my_ngram"
      }
    },
    "tokenizer": {
      "my_ngram": {
        "type": "ngram",
        "min_gram": 2,
        "max_gram": 5,
        "token_chars": [
          "letter",
          "digit"
        ]
      }
    }
  },
  "max_ngram_diff": 3
}